<Window x:Class="WPF2DView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2DView"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>

        <Canvas Name="Canvas2D" Margin="0,0,0,0" Background="Brown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" Width="Auto" Height="Auto">
        </Canvas>
        <Button x:Name="ComputeConvexHull" Content="ComputeConvexHull" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="129" Height="39" Click="ComputeConvexHull_Click"/>
        <Button x:Name="Clear" Content="Clear" Width="67" Height="39" Margin="150,10,0,0" Click="Clear_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Window>
